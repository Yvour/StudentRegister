= simple_form_for @grade do |f|
  - if @grade.errors.any?
    #error_explanation
      %h2= "#{pluralize(@grade.errors.count, "error")} prohibited this grade from being saved:"
      %ul
        - @grade.errors.full_messages.each do |msg|
          %li= msg

  .field
    /= f.label :student
    = f.association :student, :item_wrapper_class => 'Student'
    

    
  .field
    = f.label :semester
    = f.association :semester
  .field
    = f.label :discipline
    = f.association :discipline
  .field
    = f.label :grade_value
    = f.text_field :grade_value
    

  .actions
    = f.submit 'Save'
