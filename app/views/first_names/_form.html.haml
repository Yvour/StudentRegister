= form_for @first_name do |f|
  - if @first_name.errors.any?
    #error_explanation
      %h2= "#{pluralize(@first_name.errors.count, "error")} prohibited this first_name from being saved:"
      %ul
        - @first_name.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
