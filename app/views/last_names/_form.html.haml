= form_for @last_name do |f|
  - if @last_name.errors.any?
    #error_explanation
      %h2= "#{pluralize(@last_name.errors.count, "error")} prohibited this last_name from being saved:"
      %ul
        - @last_name.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
